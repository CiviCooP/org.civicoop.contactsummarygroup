<?xml version="1.0"?>
<extension key="org.civicoop.contactsummarygroup" type="module">
  <file>contactsummarygroup</file>
  <name>Contact Summary: Show Groups</name>
  <description>Displays groups on the contact summary page, just like tags.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Kevin Levie</author>
    <email>kevin.levie@civicoop.org</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/civicoop/org.civicoop.contactsummarygroup</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2017-03-17</releaseDate>
  <version>1.1</version>
  <develStage>beta</develStage>
  <compatibility>
    <ver>4.7</ver>
  </compatibility>
  <comments>Adds a 'Groups' block to the contact summary page, above 'Tags', that shows all groups the current contact belongs to.</comments>
  <civix>
    <namespace>CRM/ContactSummaryGroup</namespace>
  </civix>
</extension>